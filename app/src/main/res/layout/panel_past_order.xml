<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/standard_small_gap_size"
    android:orientation="horizontal">


    <RelativeLayout
        android:id="@+id/photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:background="@drawable/rect_background"
        android:padding="5dp">

        <ImageView
            android:id="@+id/iv_menu_image"
            android:layout_width="@dimen/menu_image_size"
            android:layout_height="@dimen/menu_image_size" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="@dimen/menu_image_size"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_menu_image"
            android:gravity="center" />
    </RelativeLayout>

    <com.devspark.robototextview.widget.RobotoTextView
        android:id="@+id/tv_description"
        android:layout_width="@dimen/standard_editbox_height"
        android:layout_height="@dimen/menu_image_size"
        android:layout_toEndOf="@id/photo"
        app:fontFamily="roboto"
        app:typeface="roboto_light_italic" />

    <TextView
        android:id="@+id/tv_price"
        android:layout_centerInParent="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@id/tv_description"
        android:layout_width="@dimen/menu_image_size"
        android:layout_height="wrap_content"
        android:gravity="center" />

</RelativeLayout>