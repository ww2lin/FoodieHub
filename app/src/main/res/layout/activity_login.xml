<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bootstrap="http://schemas.android.com/apk/res-auto"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/padding_large"
    android:background="@drawable/login_background"
    android:gravity="center_vertical"
    android:orientation="vertical">


    <com.beardedhen.androidbootstrap.BootstrapEditText
        android:id="@+id/et_username"
        android:layout_width="@dimen/standard_textbox_width"
        android:layout_height="@dimen/standard_textbox_height"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/standard_large_gap_size"
        android:layout_marginTop="@dimen/standard_large_gap_size"
        android:hint="@string/username"
        android:maxLength="@integer/standard_text_size"
        android:singleLine="true"
        bootstrap:be_roundedCorners="true"
        bootstrap:be_state="success" />

    <com.beardedhen.androidbootstrap.BootstrapEditText
        android:id="@+id/et_password"
        android:layout_width="@dimen/standard_textbox_width"
        android:layout_height="@dimen/standard_textbox_height"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/standard_large_gap_size"
        android:layout_marginTop="@dimen/standard_large_gap_size"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:maxLength="@integer/standard_text_size"
        android:singleLine="true"
        bootstrap:be_roundedCorners="true"
        bootstrap:be_state="success" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="@dimen/standard_textbox_width"
        android:layout_height="@dimen/standard_textbox_height"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/standard_large_gap_size"
        android:layout_marginTop="@dimen/standard_large_gap_size"
        android:background="@drawable/login_button" />

    <com.pnikosis.materialishprogress.ProgressWheel
        android:id="@+id/progress_wheel"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:visibility="gone"
        wheel:matProg_barColor="@color/progress_bar"
        wheel:matProg_progressIndeterminate="true" />

</LinearLayout>